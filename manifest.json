{
  "manifest_version": 2,
  "name": "Google Account Chooser",
  "short_name": "Account Chooser",
  "version": "1.0.0",
  "minimum_chrome_version": "40",
  "description": "A simple extension to choose Google accounts per tab.",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
      "activeTab",
      "*://accounts.google.com/*"
    ],
  "icons": {
    "16": "logo16.png",
    "24": "logo24.png",
    "32": "logo32.png",
    "48": "logo48.png",
    "64": "logo64.png",
    "128": "logo128.png"
  }
}
